{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "strict": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // for es6 import (commonjs)
    "allowSyntheticDefaultImports": true // for export default (*)
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}