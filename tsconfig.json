{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./build/",
    "noImplicitAny": true,
    "strict": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./config/jest/jest-setup.ts", "**/**.*"]
}
